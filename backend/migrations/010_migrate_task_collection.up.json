[
    {
        "aggregate": "tasks",
        "pipeline": [
            {
                "$project": {
                    "_id": 1,
                    "user_id": 1,
                    "id_external": 1,
                    "id_ordering": 1,
                    "id_task_section": 1,
                    "is_completed": 1,
                    "sender": 1,
                    "source_id": 1,
                    "source_account_id": 1,
                    "deeplink": 1,
                    "title": 1,
                    "body": 1,
                    "has_been_reordered": 1,
                    "due_date": 1,
                    "time_allocated": 1,
                    "created_at_external": 1,
                    "completed_at": 1,
                    "slack_message_params": 1,
                    "priority_id": "$_id.task.priority_id",
                    "priority_normalized": "$_id.task.priority_normalized",
                    "task_number": "$_id.task.task_number",
                    "comments": "$_id.task.comments",
                    "status": "$_id.task.status",
                    "previous_status": "$_id.task.previous_status",
                    "completed_status": "$_id.task.completed_status"
                }
            },
            {
                "$out": "tasks"
            }
        ],
        "cursor": {}
    }
]
