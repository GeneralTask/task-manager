{
  "name": "generaltask",
  "main": "public/electron.js",
  "author": "General Task",
  "homepage": "./",
  "description": "General Task",
  "version": "0.1.0",
  "private": true,
  "build": {
    "appId": "com.electron.generaltask",
    "productName": "General Task",
    "copyright": "Copyright Â© 2022 General Task, Inc. ",
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "afterSign": "./public/notarize.js",
    "icon": "build/icon.png",
    "mac": {
      "category": "public.app-category.productivity",
      "target": "dmg",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    }
  },
  "dependencies": {
    "@cloudflare/wrangler": "^1.16.1",
    "@reduxjs/toolkit": "^1.7.1",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/user-event": "^12.8.3",
    "@types/humanize-duration": "^3.25.1",
    "@types/jest": "^26.0.23",
    "@types/luxon": "^2.0.5",
    "@types/node": "^15.6.0",
    "@types/react": "^17.0.6",
    "@types/react-dom": "^17.0.5",
    "chokidar": "^3.5.1",
    "chrono-node": "^2.3.4",
    "electron-is-dev": "^2.0.0",
    "electron-notarize": "^1.1.1",
    "humanize-duration": "^3.27.0",
    "js-cookie": "^2.2.1",
    "lodash": "^4.17.21",
    "luxon": "^2.0.2",
    "msw": "^0.36.3",
    "npx": "^10.2.2",
    "parse-duration": "^1.0.2",
    "react": "^17.0.2",
    "react-contenteditable": "^3.3.6",
    "react-dnd": "^14.0.4",
    "react-dnd-html5-backend": "^14.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-router-dom": "^6.2.1",
    "react-scripts": "^5.0.0",
    "react-toastify": "^8.1.0",
    "redux": "^4.1.0",
    "sanitize-html": "^2.6.0",
    "styled-components": "^5.3.3",
    "typescript": "^4.5.4",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .\\",
    "electron-dev": "APP_DEV=true electron .\\",
    "pack": "build --em.main=build/main.js",
    "dist": "electron-builder"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.7",
    "@types/js-cookie": "^2.2.6",
    "@types/lodash": "^4.14.170",
    "@types/react-router-dom": "^5.1.7",
    "@types/sanitize-html": "^2.6.0",
    "@types/styled-components": "^5.1.15",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "electron": "^16.0.5",
    "electron-builder": "^22.14.5",
    "eslint": "^7.27.0",
    "eslint-plugin-unused-imports": "^1.1.1",
    "json-server": "^0.16.3",
    "serve": "^11.3.2"
  }
}
